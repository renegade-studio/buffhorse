{
  "extends": "../tsconfig.base.json",
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@opentui/react",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveSymlinks": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
